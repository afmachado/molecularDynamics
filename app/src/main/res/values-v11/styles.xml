<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Activity theme. -->
    <style name="MmdActionBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MmdActionBar</item>
        <item name="android:actionDropDownStyle">@style/MmdDropDown</item>
    </style>
    
	<style name="MmdActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:height">@dimen/activity_action_bar_size</item>
    </style>
    
	<style name="MmdDropDown" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/mmd_spinner</item>
	</style>
		
</resources>
